<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/txt_nomor_ayat"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_arab_ayat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="12pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_nomor_ayat"
        app:layout_constraintTop_toTopOf="@+id/txt_nomor_ayat" />

    <TextView
        android:id="@+id/txt_id_ayat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="8pt"
        app:layout_constraintEnd_toEndOf="@+id/txt_arab_ayat"
        app:layout_constraintTop_toBottomOf="@+id/txt_arab_ayat" />
</androidx.constraintlayout.widget.ConstraintLayout>